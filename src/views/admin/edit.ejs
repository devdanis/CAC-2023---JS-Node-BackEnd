<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Item</title>
	<link rel="stylesheet" href="/css/login_shop-style.css" />
</head>
<body>
   
	<%- include('../partials/header.ejs') %>
	<main class="main__edit container">
	
		<section class="main__form-container">
		
			<h1>EDITAR ITEM</h1>
			
			<!-- Formulario de edición -->
			<% if( typeof error != 'undefined'){ %>
				<div class="error">
			
					<% error.forEach(err =>{ %>
				
						<p><%= err.msg %></p>
					
					<% }) %>
					
				</div>
			<% } %>
			
			<%= console.log(product["category.category_id"]) %>
			
			<form class="main__form" action="/admin/edit/<%= product.id %>?_method=PUT" method="post" enctype="multipart/form-data">
				<div class="form__select-edit">
				
						<label class="form__label-big" for="category_id">Categoría:</label>
						
						<select class="form__search-input form__select-child" id="category_id" name="category_id">
						
							<option value=""></option>
							<% category.forEach(category => { %>
								
								<option value="<%= category.category_id %>" <%= category.category_id == product.category_id ? "selected" : " " %> ><%= category.category_name %></option>
								
							<% }); %>
						</select>
						<label class="form__label-big" for="license_id">Licencia:</label>
						<select class="form__search-input form__select-child" id="license_id" name="license_id">
							
							<option value=""></option>
							<% license.forEach(license => { %>
								
								<option value="<%= license.license_id %>" <%= license.license_id == product.license_id ? "selected" : " " %> ><%= license.license_name %></option>
								
							<% }); %>
						</select>
				</div>
				<div class="form__div-edit div-1">
					<label class="form__label-edit" for="name">Nombre del producto:</label>
					<input type="text" id="name" name="name" value="<%= product.name %>">
				</div>
				<div class="form__div-edit div-2">
					
					<textarea id="description" class="form__textarea" name="description"><%=product.description %></textarea>
				</div>
				<div class="form__div-edit div-3">
					<label class="form__label-edit" for="SKU">SKU:</label>
					<input type="text" id="SKU" name="SKU" value="<%= product.SKU %>">
				
				
					<label class="form__label-edit" for="price">Precio:</label>
					<input type="number" id="price" name="price" value="<%= product.price %>">
				
				
					<label class="form__label-edit" for="stock">Stock:</label>
					<input type="number" id="stock" name="stock" value="<%= product.stock %>">
				</div>
				<div class="form__div-edit div-4">
					<label class="form__label-edit" for="discount">Descuento:</label>
					<input type="text" id="discount" name="discount" value="<%= product.discount %>">
					<label class="form__label-edit" for="dues">Cuotas:</label>
					<select class="form__select-child" id="dues" name="dues">
						<option value = "<%= product.dues %>"><%= product.dues %> cuotas sin interes</option>
						<option value = "3">3 cuotas sin interes</option>
						<option value = "6">6 cuotas sin interes</option>
						<option value = "9">9 cuotas sin interes</option>
						<option value = "12">12 cuotas sin interes</option>
					</select>
				</div>
				<div class="form__div-edit div-5">
					<label class="form__label-edit" for="images">Imágenes:</label>
					<input type="file" id="images" name="images" multiple value="" accept="image/png image/jpg image/webp">
		
			
					<div class="form__ul">
						<div>
						
							
							<div class="form__li">
								<img src="/assets/multimedia/uploads/<%= product["license.license_name"] %>/<%= product.product_front_view %>" alt="<%= product.name %>" />
							</div>
							<div>
								<p class="form__text-align form__label-big">Frente</p>
							</div>
							
						
						</div>
						<div>
							
							
							<div class="form__li">
								<img src="/assets/multimedia/uploads/<%= product["license.license_name"] %>/<%= product.product_box %>" alt="<%= product.name %> caja"/>
							</div>
							<div>
								<p class="form__text-align form__label-big">Dorso</p>
							</div>
							
						
						</div>
					</div>
					
					<div class="form__div-edit">
						<button class="submit-edit" type="submit">Modificar Producto</button>
					</div>
					
				</div>
				
			</form>
		</section>	
	</main>
    <%- include('../partials/footer.ejs') %>
</body>
</html>